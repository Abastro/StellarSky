// Equation which 'works'
vec3 sRGB(vec3 RGB) {
    vec3 S1 = sqrt(RGB);
    vec3 S2 = sqrt(S1);
    vec3 S3 = sqrt(S2);
    return 0.585122381 * S1 + 0.783140355 * S2 - 0.368262736 * S3;
}

vec4 sRGB(vec4 c) {
    return vec4(sRGB(c.xyz), c.w);
}

void main()
{
    vec4 linear = decode(texture2D(texture, gl_TexCoord[0].st));
    gl_FragColor = sRGB(linear);
}